{# src/OC/PlatformBundle/Resources/views/Advert/purge.html.twig #}

{% extends "OCPlatformBundle::layout.html.twig" %}

{% block title %}
  Liste des annonces à purger - {{ parent() }}
{% endblock %}

{% block ocplatform_body %}

  <h2>Liste des annonces &agrave; purger</h2>

  <ul>
    {% for advert in listAdverts %}
      <li>
        <a href="{{ path('oc_platform_view', {'id': advert.id}) }}">
          {{ advert.title }}
        </a>
        par {{ advert.author }},
        le {{ advert.date|date('d/m/Y') }}
      </li>
    {% else %}
      <li>Pas (encore !) d'annonces</li>
    {% endfor %}
  </ul>

  <a href="{{ path('oc_platform_purge', {'days':1}) }}">PURGER</a>

{% endblock %}